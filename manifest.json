{
  "manifest_version": 2,

  "name": "LogMachine",
  "short_name": "LogMachine",
  "version": "2.2",
  "devtools_page": "devtool.html",
  "browser_action": {
    "default_icon": "images/icon1.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "cookies",
    "https://*.force.com/*",
    "https://*.salesforce.com/",
    "activeTab",
    "https://ajax.googleapis.com/"
   
  ],
  
"background": {
    "scripts": ["background.js"]
    //"persistent": false
  },

  "content_scripts": [
  {
    "matches": [
      "https://*.salesforce.com/setup/ui/*",
      "https://*.salesforce.com/p/setup/layout/ApexDebugLogDetailEdit/*",
      "https://*.force.com/*",
      "https://*.salesforce.com/*"
    ],
    "js": [
  "jquery-2.1.4.min.js",
	"CodeFormatter.js",
  "forcetk.js",
	"formatDebugSummaryLog.js",
	"formatDebugDetailsLog.js",
	"formatApexClass.js",
  "calloutRESTSFDC.js",
  "ConsoleLog.js",
  "UtilClass.js",
  "ApexClassHandler.js",
	"content.js"
	]
  }
],

"web_accessible_resources": [
    "*.png","View.png"
	]
}